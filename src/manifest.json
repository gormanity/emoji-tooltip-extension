{
  "manifest_version": 3,
  "name": "Emoji Revealer",
  "version": "0.1.0",
  "description": "Displays emoji names on hover, making it easy to understand what any emoji means.",
  "browser_specific_settings": {
    "gecko": {
      "id": "emoji-revealer@example.com",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"]
}
